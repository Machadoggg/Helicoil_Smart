<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Helicoil_Smart.Mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30">
            <Label Text="Registro de Datos" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="nombreEntry" Placeholder="Nombre completo" />
            <Entry x:Name="cedulaEntry" Placeholder="Número de cédula" Keyboard="Numeric" />

            <Button Text="Registrar" Clicked="OnRegistrarClicked" />
            <Label x:Name="resultadoLabel" TextColor="Green" FontSize="14"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
